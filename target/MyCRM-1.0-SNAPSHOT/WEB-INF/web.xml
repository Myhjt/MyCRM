<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!--
        add/create：跳转到添加页，
        save:执行添加操作
        edit:跳转到修改页，或者打开修改操作的模态窗口
        update:执行修改操作
        get:执行查询操作
        特殊操作
    -->

    <listener>
        <listener-class>com.hjt.MyCRM.web.listener.SysInitListener</listener-class>
    </listener>
    <!--字符编码过滤器-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.hjt.MyCRM.web.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <!--登录验证过滤器-->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.hjt.MyCRM.web.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.hjt.MyCRM.settings.web.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/settings/user/save.do</url-pattern>
        <url-pattern>/settings/user/login.do</url-pattern>
    </servlet-mapping>

    <!--市场活动-->
    <servlet>
        <servlet-name>ActivityController</servlet-name>
        <servlet-class>com.hjt.MyCRM.workbench.web.controller.ActivityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActivityController</servlet-name>
        <url-pattern>/workbench/activity/save.do</url-pattern>
        <url-pattern>/workbench/activity/getUserList.do</url-pattern>
        <url-pattern>/workbench/activity/pageList.do</url-pattern>
        <url-pattern>/workbench/activity/delete.do</url-pattern>
        <url-pattern>/workbench/activity/getUserListAndActivity.do</url-pattern>
        <url-pattern>/workbench/activity/modify.do</url-pattern>
        <url-pattern>/workbench/activity/detail.do</url-pattern>
    </servlet-mapping>

    <!--市场活动备注-->
    <servlet>
        <servlet-name>ActivityRemarkController</servlet-name>
        <servlet-class>com.hjt.MyCRM.workbench.web.controller.ActivityRemarkController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActivityRemarkController</servlet-name>
        <url-pattern>/workbench/activityRemark/getRemarkList.do</url-pattern>
        <url-pattern>/workbench/activityRemark/save.do</url-pattern>
        <url-pattern>/workbench/activityRemark/delete.do</url-pattern>
        <url-pattern>/workbench/activityRemark/modify.do</url-pattern>
    </servlet-mapping>

    <!--线索-->
    <servlet>
        <servlet-name>ClueController</servlet-name>
        <servlet-class>com.hjt.MyCRM.workbench.web.controller.ClueController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClueController</servlet-name>
        <url-pattern>/workbench/clue/getUserList.do</url-pattern>
        <url-pattern>/workbench/clue/save.do</url-pattern>
        <url-pattern>/workbench/clue/pageList.do</url-pattern>
        <url-pattern>/workbench/clue/detail.do</url-pattern>
        <url-pattern>/workbench/clue/get.do</url-pattern>
        <url-pattern>/workbench/clue/modify.do</url-pattern>
        <url-pattern>/workbench/clue/getActivityListByClueId.do</url-pattern>
        <url-pattern>/workbench/clue/getActivityListByActivityNameNotClueId.do</url-pattern>
        <url-pattern>/workbench/clue/getActivityListByActivityName.do</url-pattern>
        <url-pattern>/workbench/clue/unbound.do</url-pattern>
        <url-pattern>/workbench/clue/bound.do</url-pattern>
        <url-pattern>/workbench/clue/convert.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TranController</servlet-name>
        <servlet-class>com.hjt.MyCRM.workbench.web.controller.TranController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TranController</servlet-name>
        <url-pattern>/workbench/transaction/add.do</url-pattern>
        <url-pattern>/workbench/transaction/save.do</url-pattern>
        <url-pattern>/workbench/transaction/getCustomerNames.do</url-pattern>
        <url-pattern>/workbench/transaction/getActivityListByActivityName.do</url-pattern>
        <url-pattern>/workbench/transaction/getContactsListByContactsName.do</url-pattern>
        <url-pattern>/workbench/transaction/pageList.do</url-pattern>
        <url-pattern>/workbench/transaction/detail.do</url-pattern>
        <url-pattern>/workbench/transaction/getHistoryList.do</url-pattern>
        <url-pattern>/workbench/transaction/changeStage.do</url-pattern>
    </servlet-mapping>
</web-app>